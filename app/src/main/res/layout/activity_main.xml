<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/textViewDashboardCallToAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel the World! Leave a Mark!"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        android:id="@+id/textViewDashboardDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Any event, attraction site, or venue you've always wanted to visit? Your time is here. Get a few ideas to light up your celebration, holiday, or vacation."
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14" />

    <TextView
        android:id="@+id/buttonDashboardEvents"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/tab3"
        android:paddingTop="70dp"
        android:text="Events"
        android:textAlignment="center"
        android:textColor="@color/ghost_white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.368" />

    <TextView
        android:id="@+id/buttonDashboardAttractions"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/tab"
        android:paddingTop="70dp"
        android:text="Attractions"
        android:textAlignment="center"
        android:textColor="@color/ghost_white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.773" />

    <TextView
        android:id="@+id/buttonDashboardVenues"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/tab2"
        android:paddingTop="70dp"
        android:text="Venues"
        android:textAlignment="center"
        android:textColor="@color/ghost_white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.368" />

</androidx.constraintlayout.widget.ConstraintLayout>